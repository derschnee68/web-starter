{
  "name": "web-starter-graphql",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "mikro": "NODE_ENV=dev mikro-orm",
    "gen:migration": "rimraf src/database/migrations/.snapshot-isquare.json src/database/migrations/* && pnpm mikro schema:drop -r && pnpm mikro migration:create && prettier -w src/database/migrations/*.ts && pnpm mikro migration:fresh --seed",
    "migration:create": "pnpm mikro migration:create && prettier -w src/database/migrations/*.ts && pnpm mikro migration:up",
    "fresh": "pnpm mikro migration:fresh --seed"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.2.0",
    "@mikro-orm/migrations": "^5.2.0",
    "@mikro-orm/mysql": "^5.2.0",
    "@mikro-orm/nestjs": "^5.0.2",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.1.7",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@sentry/node": "^7.2.0",
    "apollo-server-core": "^3.7.0",
    "apollo-server-express": "^3.11.1",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "tslog": "^3.3.4",
    "uuid": "^9.0.0",
    "zod": "^3.16.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.2.0",
    "@mikro-orm/seeder": "^5.2.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.191",
    "@types/mjml-core": "^4.7.1",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "apollo-server-types": "^3.6.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.18.2",
    "jest": "28.1.3",
    "mjml": "^4.12.0",
    "mjml-core": "^4.12.0",
    "mjml-head-font": "^4.12.0",
    "mjml-with-images-loader": "^2.0.1",
    "prettier": "^2.3.2",
    "raw-loader": "^4.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/database/mikro-orm.config.ts",
      "./dist/database/mikro-orm.config.js"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
